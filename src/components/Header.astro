    @include m.for-tablet(w.$tablet) {
      display: block;
    }
    display: none;
  }

  .contact-wrapper {
    @include m.for-tablet(w.$tablet) {
      display: block;
      margin-inline-start: 1rem;
      place-self: baseline;
    }
    display: none;
    grid-column: 2;
    grid-row: 3;
    place-self: center;
  }

  .contact {
    @include m.for-tablet(w.$tablet) {
      padding-inline: 0.5em;
    }
    padding-inline: 0.2em;
  }

  .social {
    display: none;
    @include m.for-tablet(w.$tablet) {
    }
    grid-template-columns: 1fr 1fr 1fr;
    gap: 1.5rem;
    // margin-block-start: 1.5rem;
    grid-column: 2;
    grid-row: 4;
    place-self: start;
    margin-block-start: 1rem;
  }

  // Mobile menu
  .hamburger-menu {
    display: flex;
    align-items: center;
    justify-content: space-between;
    transition: all 0.3s ease;
    margin-inline: auto;
    width: 100%;
    @include m.for-tablet(w.$tablet) {
      display: none;
    }
  }

  .nav-toggle {
    @include m.for-tablet(w.$tablet) {
      display: none;
    }

    cursor: pointer;
    border: 0;
    width: 2rem;
    height: 2.5rem;
    padding: 0;
    margin-block-start: 0.4rem;
    border-radius: 50%;
    background: var(--color-bg);
    left: 0;
    top: 0;
    z-index: 1;
  }
  .hamburger,
  .hamburger::before,
  .hamburger::after {
    display: block;
    height: 0.1rem;
    background: var(--color-fg);
    z-index: 1;
  }

  .hamburger::before,
  .hamburger::after {
    content: "";
    width: 100%;
  }

  .hamburger::before {
    transform: translateY(-7px);
  }

  .hamburger::after {
    transform: translateY(5px);
  }
