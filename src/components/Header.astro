---
import DarkMode from "./DarkMode.astro";
import SocialLinks from "./SocialLinks.astro";
import ThemeSelection from "./ThemeSelection.astro";
---

<div class="nav">
  <div class="logo">
    <a href="/">
      <h1 class="logo-heading text-gradient">adam</h1>
    </a>
    <div class="dark-mode">
      <DarkMode />
    </div>
  </div>
  <div class="links">
    <a
      href="/"
      class="link nav__link">home</a
    >
    <a
      href="/about"
      class="link nav__link">about</a
    >
    <a
      href="/projects"
      class="link nav__link">projects</a
    >
  </div>
  <div class="contact-wrapper">
    <a href="#contact"
      ><button class="btn nav__btn nav__link contact">let's talk</button>
    </a>
  </div>
  <div class="social">
    <SocialLinks />
  </div>
  <div class="hamburger-menu">
    <button
      class="nav-toggle"
      aria-label="open navigation"
    >
      <span class="hamburger"></span>
    </button>
  </div>
</div>

