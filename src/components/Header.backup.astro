---
import DarkMode from "./DarkMode.astro";
import SocialLinks from "./SocialLinks.astro";
import ThemeSelection from "./ThemeSelection.astro";
---

<div class="nav">
  <div class="logo">
    <a href="/">
      <h1 class="logo-heading text-gradient">adam</h1>
    </a>
    <div class="dark-mode">
      <DarkMode />
    </div>
  </div>
  <!-- <div class="social">
    <SocialLinks />
  </div> -->
  <div class="links">
    <a
      href="/"
      class="link nav__link">home</a
    >
    <a
      href="/about"
      class="link nav__link">about</a
    >
    <a
      href="/projects"
      class="link nav__link">projects</a
    >
  </div>
  <div class="contact-wrapper">
    <a href="#contact"
      ><button class="btn nav__btn nav__link contact">let's talk</button>
    </a>
  </div>
  <div class="social">
    <SocialLinks />
  </div>
</div>
<div class="hamburger-menu">
  <button
    class="nav-toggle"
    aria-label="open navigation"
  >
    <span class="hamburger"></span>
  </button>
  <nav class="mobile-nav">
    <!-- <div class="mobile-theme">
        <ThemeSelection />
      </div> -->
    <div class="theme-wrapper">
      <div class="mobile-theme">
        <DarkMode />
      </div>
    </div>

    <a
      href="/"
      class="nav__link nav__link--text">home</a
    >
    <a
      href="/about"
      class="nav__link nav__link--text">about</a
    >
    <a
      href="/projects"
      class="nav__link nav__link--text">projects</a
    >
    <a href="/contact"><button class="btn nav__btn">Lets Talk</button></a>

    <div class="social-mobile">
      <SocialLinks />
    </div>
  </nav>

  <div class="logo-mobile">
    <a href="/">
      <h1 class="text-gradient logo-mobile__heading">adam</h1>
    </a>
  </div>
</div>

<style lang="scss">
  @use "../styles/mixins" as m;
  @use "../styles/variables" as w;
  .nav {
    display: flex;
    // flex-direction: row-reverse;
    justify-content: space-between;
    align-items: center;
    margin-inline: auto;
    width: 100%;
    @include m.for-tablet(w.$tablet) {
      flex-direction: row;
      align-items: baseline;
      justify-content: space-between;
    }
  }

  .logo {
    display: none;
    @include m.for-tablet(w.$tablet) {
      display: inline-block;
      place-self: baseline;
      display: flex;
      align-items: center;
    }
  }

  .dark-mode {
    padding-block-end: 0.8rem;
    padding-inline-start: 1rem;
  }

  // .theme-wrapper {
  //   display: grid;
  //   place-content: start;
  // }

  .theme-toggle {
    margin-block-end: 1rem;
    // z-index: 2;
  }

  .links * ~ * {
    margin-block-start: 1rem;
    @include m.for-tablet(w.$tablet) {
      margin-inline-start: 1rem;
    }
  }

  .links {
    @include m.for-tablet(w.$tablet) {
      display: block;
    }
    display: none;
  }

  .contact-wrapper {
    @include m.for-tablet(w.$tablet) {
      display: block;
      margin-inline-start: 1rem;
      place-self: baseline;
    }
    display: none;
    grid-column: 2;
    grid-row: 3;
    place-self: center;
  }

  .contact {
    @include m.for-tablet(w.$tablet) {
      padding-inline: 0.5em;
    }
    padding-inline: 0.2em;
  }

  .social {
    @include m.for-tablet(w.$tablet) {
    }
    display: none;
    grid-template-columns: 1fr 1fr 1fr;
    gap: 1.5rem;
    // margin-block-start: 1.5rem;
    grid-column: 2;
    grid-row: 4;
    place-self: start;
    margin-block-start: 1rem;
  }

  // Mobile menu
  .hamburger-menu {
    display: flex;
    align-items: center;
    justify-content: space-between;
    transition: all 0.3s ease;
    margin-inline: auto;
    width: 100%;
    @include m.for-tablet(w.$tablet) {
      display: none;
    }
  }

  .nav-toggle {
    @include m.for-tablet(w.$tablet) {
      display: none;
    }

    cursor: pointer;
    border: 0;
    width: 2rem;
    height: 2.5rem;
    padding: 0;
    margin-block-start: 0.4rem;
    border-radius: 50%;
    background: var(--color-bg);
    left: 0;
    top: 0;
    z-index: 1;
  }
  .hamburger,
  .hamburger::before,
  .hamburger::after {
    display: block;
    height: 0.1rem;
    background: var(--color-fg);
    z-index: 1;
  }

  .hamburger::before,
  .hamburger::after {
    content: "";
    width: 100%;
  }

  .hamburger::before {
    transform: translateY(-7px);
  }

  .hamburger::after {
    transform: translateY(5px);
  }

  .mobile-nav {
    visibility: hidden;
    opacity: 0;
    position: absolute;
    transform: translateX(-400px);
    transition: transform 0.3s ease-in-out;

    &--visible {
      display: flex;
      flex-direction: column;
      align-items: center;
      justify-content: flex-start;
      width: 100%;
      height: 100vh;
      visibility: visible;
      opacity: 1;
      left: 0;
      top: 0;
      margin-block-start: 8rem;
      padding-block-start: 6rem;
      background: var(--color-bg);
      transform: translateX(0);
      transition: transform 0.5s ease;
      z-index: 1;

      .mobile-theme {
        margin-block-end: 1rem;
      }
    }

    &--visible > * {
      margin-block-start: 1rem;
    }

    .social-mobile {
      display: flex;
      align-items: space-between;
      justify-content: space-between;
      margin-inline: auto;
    }
  }

  .nav-transition {
    padding-block-start: 1.5rem;
    padding-inline: 1.5rem;
    transition: padding 0.3s ease;
  }
</style>
