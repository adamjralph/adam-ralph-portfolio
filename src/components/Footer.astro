<style lang="scss">
  .footer {
    background-color: #333;
    height: 6rem;
    margin-block-start: 5rem;
    padding: 1rem;
    display: grid;
    grid-template-columns: 1fr 1fr 1fr;
    align-items: center;
  }

  .built-with * ~ * {
    margin-inline-start: 0.3rem;
  }

  .built-with {
    grid-column: 1 / 4;
    grid-row: 1;
    display: flex;
    // justify-content: space-between;
    width: 100%;
    margin-inline: auto;

    .heading {
      display: inline-block;
    }

    svg {
      width: 100%;
      min-width: 2rem;
    }
  }

  .tools {
    display: flex;
    align-items: center;
  }

  .build {
    grid-column: 1 / 3;
    grid-row: 2;
    display: flex;
    /* align-content: center; */
    /* text-align: center; */
    /* margin-inline: auto; */
  }

  .copyright {
    grid-column: 3;
    grid-row: 2;
    text-align: center;
  }
  span {
    color: var(--color-fg);
  }
</style>
