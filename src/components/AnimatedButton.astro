---
const { btnText } = Astro.props;
---

<a href="/">
  <div class="card">
    <div class="color-layer"></div>
    <div class="inner-layer"></div>
    <h2 class="text-layer">{btnText}</h2>
  </div>
</a>

<style lang="scss">
  .card > * {
    grid-column: 1 / -1;
    grid-row: 1 / -1;
  }

  .card {
    display: grid;
    position: relative;
    overflow: hidden;
    background-color: transparent;
    height: 3rem;
    max-height: 80px;
    max-width: 150px;
    margin-inline: auto;
    border: 1px solid var(--color-highlight);
    border-radius: 5px;
    margin-block: 3rem;
  }

  .color-layer {
    position: absolute;
    align-self: center;
    justify-self: center;
    width: 15%;
    height: 300%;
    animation: borderRotate 3s linear infinite;
    z-index: -1;
    background: linear-gradient(
      90deg,
      var(--color-highlight-light) 0%,
      var(--color-highlight-deep) 100%
    );
  }

  @keyframes borderRotate {
    0% {
      transform: rotate(0deg);
    }
    100% {
      transform: rotate(360deg);
    }
  }

  .inner-layer {
    background-color: var(--color-bg);
    margin: 0.2rem;
    border: 1px inset var(--color-highlight);
    border-radius: 5px;
  }

  .text-layer {
    align-self: center;
    justify-self: center;
    margin-block-end: 0.1em;
  }
</style>
