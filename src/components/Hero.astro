---
import SocialLinks from "./SocialLinks.astro";
import AnimatedButton from "./AnimatedButton.astro";
import "../styles/global.scss";
---

<main
  id="main"
  class="main"
>
  <section
    id="hero"
    class="hero"
  >
    <div class="hero__content">
      <!-- <div class="hero-text"> -->
      <h1 class="hero__heading hero__heading--2">
        Building<span class="text-gradient">
          <a href="#"> internet things</a>
        </span>
      </h1>
      <p class="hero__text">
        hand-crafted <br /> internet <br /> experences <br /> for profit and <br
        /> pleasure
      </p>
      <div class="action">
        <AnimatedButton
          btnText="Let's code"
          btnPath="#contact"
        />
      </div>
      <div class="hero__image"></div>
    </div>
  </section>
  <!-- <div class="horizontal-line"></div> -->
  <!-- <div class="social-hero">
    <SocialLinks />
  </div>
  <div class="horizontal-line"></div> -->
</main>
<a
  href="#contact"
  class="hero__contact"
>
  <style lang="scss">
    @use "../styles/mixins" as m;
    @use "../styles/variables" as w;

    .social-hero {
      display: flex;
      justify-content: space-between;
      padding-inline: 2rem;
    }

    .hero {
      position: relative;
      height: 50vh;
      opacity: 1;
      background-color: var(--color-bg);
      transition: opacity 0.3s ease;
      @include m.for-mobile(w.$mobile) {
        display: flex;
        flex-direction: column;
      }
    }

    .hero__content {
      position: relative;
      display: flex;
      flex-direction: column;
      align-items: flex-start;
      justify-content: space-between;
      z-index: 1;
      @include m.for-mobile(w.$mobile) {
        align-items: flex-start;
      }
    }

    .hero__heading {
      line-height: 1.3;
      text-align: left;
      max-width: 100%;
      color: var(--color-fg);
      font-size: var(--font-size-xl);
      z-index: 1;
      animation: fadeInAnimation ease-in-out 2s;
      animation-iteration-count: 1;
      animation-fill-mode: backwards;
      margin-block-end: 2rem;
      @include m.for-mobile(w.$mobile) {
        text-align: left;
      }
    }

    .hero__text {
      text-align: left;
      line-height: 1.3;
      font-weight: 500;
      max-width: 45%;
      margin-block-end: 2rem;

      animation: fadeInAnimation ease-in-out 2s;
      animation-iteration-count: 1;
      animation-fill-mode: backwards;
      animation-delay: 0.5s;
      @include m.for-mobile(w.$mobile) {
        text-align: left;
      }
    }

    .action {
      margin-block-end: 2rem;
    }

    .hero__btn {
      padding: 0.1em;
      animation: fadeInAnimation ease-in-out 1.5s;
      animation-iteration-count: 1;
      animation-fill-mode: backwards;
      animation-delay: 1.6s;
    }

    .hero__image {
      position: absolute;
      top: 4.5rem;
      right: 0;
      background-image: linear-gradient(transparent 65%, var(--color-bg)),
        linear-gradient(260deg, transparent 60%, var(--color-bg)),
        url("../images/adam-styled.png");
      height: 100%;
      width: 73%;
      height: 18rem;
      background-position: 0 0;
      background-size: cover;
      z-index: -2;
      animation: fadeInAnimation ease-in-out 1.75s;
      animation-iteration-count: 1;
      animation-fill-mode: backwards;
      animation-delay: 0.8s;
      @include m.for-mobile(w.$mobile) {
        top: 0;
        right: 0;
        margin-inline-end: 2rem;
      }
    }

    .horizontal-line {
      height: 1px;
      background-color: var(--color-fg);
      margin-inline: 2rem;
      margin-block: 1rem;
    }

    .hero__social {
      display: flex;
      justify-content: space-between;
      padding-inline: 1rem;
    }
  </style>
</a>
