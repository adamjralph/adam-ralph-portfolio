---
import SocialLinks from "./SocialLinks.astro";
import AnimatedButton from "./AnimatedButton.astro";
import "../styles/global.scss";
---

<main
  id="main"
  class="main"
>
  <section
    id="hero"
    class="hero"
  >
    <div class="hero__content">
      <!-- <div class="hero-text"> -->
      <h1 class="hero__heading hero__heading--2">
        Building<span class="text-gradient">
          <a href="#"> internet things</a>
        </span>
      </h1>
      <p class="hero__text">
        hand-crafted internet experences for profit and pleasure
      </p>
      <!-- </div> -->
      <a
        href="#contact"
        class="hero__contact"
        ><button class="btn nav__btn nav__link hero__btn">lets code</button>
      </a>
    </div>
    <div class="hero__image"></div>
  </section>
  <div class="horizontal-line"></div>
  <div class="social-hero">
    <SocialLinks />
  </div>
  <div class="horizontal-line"></div>

  <AnimatedButton />
</main>

<style lang="scss">
  @use "../styles/mixins" as m;
  @use "../styles/variables" as w;

  .social-hero {
    display: flex;
    justify-content: space-between;
    padding-inline: 2rem;
  }

  .main {
    margin-block-start: 7rem;
  }

  .hero {
    position: relative;
    // display: flex;
    // align-items: center;
    // justify-content: center;
    opacity: 1;
    background-color: var(--color-bg);
    transition: opacity 0.3s ease;
    @include m.for-mobile(w.$mobile) {
      display: flex;
      flex-direction: column;
    }
  }

  .hero__content {
    position: relative;
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: space-between;
    z-index: 1;
    @include m.for-mobile(w.$mobile) {
      align-items: flex-start;
      // flex-direction: column;
      // justify-content: center;
    }
  }

  .hero__heading {
    line-height: 1.3;
    text-align: center;
    max-width: 100%;
    color: var(--color-fg);
    font-size: var(--font-size-xl);
    z-index: 1;
    animation: fadeInAnimation ease-in-out 2s;
    animation-iteration-count: 1;
    animation-fill-mode: backwards;
    margin-block-end: 2rem;
    @include m.for-mobile(w.$mobile) {
      text-align: left;
    }
  }

  .hero__text {
    text-align: center;
    line-height: 1.3;
    font-weight: 500;
    max-width: 14em;
    margin-block-end: 1.5rem;

    animation: fadeInAnimation ease-in-out 2s;
    animation-iteration-count: 1;
    animation-fill-mode: backwards;
    animation-delay: 0.5s;
    @include m.for-mobile(w.$mobile) {
      text-align: left;
    }
  }

  .hero__contact {
    width: 100%;
    max-width: 32%;
    margin-block-end: 1.5rem;
  }

  .hero__btn {
    padding: 0.1em;
    animation: fadeInAnimation ease-in-out 1.5s;
    animation-iteration-count: 1;
    animation-fill-mode: backwards;
    animation-delay: 1.6s;
  }

  .hero__image {
    // position: absolute;
    background-image: linear-gradient(transparent 65%, var(--color-bg)),
      linear-gradient(260deg, transparent 60%, var(--color-bg)),
      url("../images/adam-styled.png");
    height: 100%;
    width: 100%;
    max-width: 80%;
    height: 20em;
    margin-inline: auto;
    background-position: 0 0;
    background-size: cover;
    // background-clip: padding-box;
    z-index: -1;
    animation: fadeInAnimation ease-in-out 1.75s;
    animation-iteration-count: 1;
    animation-fill-mode: backwards;
    animation-delay: 0.8s;
    @include m.for-mobile(w.$mobile) {
      // position: absolute;
      top: 0;
      right: 0;
      margin-inline-end: 2rem;
    }
  }

  .horizontal-line {
    height: 1px;
    background-color: var(--color-fg);
    margin-inline: 2rem;
    margin-block: 1rem;
  }

  .hero__social {
    display: flex;
    justify-content: space-between;
    padding-inline: 1rem;
  }
</style>
