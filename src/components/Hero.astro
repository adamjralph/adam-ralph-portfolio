---
import AnimatedButton from "./AnimatedButton.astro"
import Lead from "./Lead.astro";
import "../styles/global.scss"
---

<main
    id="main"
    class="main"
>
    <section
        id="hero"
        class="hero"
    >
        <div class="content">
            <h1 class="heading heading-2">
                Building<span class="text-gradient">
                    <a href="#projects"> internet things</a>
                </span>
            </h1>
            <p class="text">
                Building my internet empire one line of code at a time... 

            </p>
            <!-- <div class="image"></div> -->
            <div class="lead">
                <Lead />
            </div>
            <div class="action">
                <AnimatedButton
                    btnText="Let's talk"
                    btnPath="#contact"
                />
            </div>
        </div>
    </section>
</main>

<style lang="scss">
    @use "../styles/mixins" as m;
    @use "../styles/variables" as w;

    a {
        text-decoration: none;
    }

    .hero {
        @include m.for-mobile(w.$mobile) {
            position: relative;
            display: grid;
            justify-content: center;
            opacity: 1;
            background-color: var(--color-bg);
            transition: opacity 0.3s ease;
            // grid-template-columns: 1fr 1fr;
        }
    }

    .content {
        width: 100%;
        margin-inline: auto;
        @include m.for-mobile(w.$mobile) {
            max-width: 80%;
            display: grid;
            row-gap: 2rem;
            grid-template-columns: 1fr 1fr;
            grid-template-rows: 30%;
        }
    }

    .heading {
        line-height: 1.3;
        text-align: center;
        max-width: 100%;
        color: var(--color-fg);
        font-size: var(--font-size-xl);
        z-index: 1;
        animation: fadeInAnimation ease-in-out 2s;
        animation-iteration-count: 1;
        animation-fill-mode: backwards;
        margin-block-end: 2rem;
        @include m.for-mobile(w.$mobile) {
            text-align: left;
            line-height: 1.1;
            grid-column: 1;
            grid-row: 1 / 2;
            margin: 0;
        }
    }

    .text {
        text-align: center;
        line-height: 1.3;
        font-weight: 400;
        width: 100%;
        max-width: 60%;
        margin-block-end: 2rem;
        margin-inline: auto;
        
        animation: fadeInAnimation ease-in-out 2s;
        animation-iteration-count: 1;
        animation-fill-mode: backwards;
        animation-delay: 0.5s;
        @include m.for-mobile(w.$mobile) {
            font-size: 2rem;
            grid-column: 1;
            grid-row: 2;
            text-align: left;
            margin: 0;
        }
    }

    .lead {
        display: grid;
        margin-inline: auto;
        width: 100%;
        justify-content: end;
        // text-align: center;
        padding-block: 0.5rem;
        @include m.for-mobile(w.$mobile) {
            display: block;
            grid-column: 2;
            grid-row: 1 / 4;
            padding-inline-start: 8rem;
        }

    }

    .action {
        margin-block-start: 3rem;
        width: 60%;
        max-width: 9rem;
        margin-inline: auto;
        @include m.for-mobile(w.$mobile) {
            grid-column: 1;
            grid-row: 3;
            justify-content: start;
            margin: 0;
        }
    }

    .hero__btn {
        padding: 0.1em;
        animation: fadeInAnimation ease-in-out 1.5s;
        animation-iteration-count: 1;
        animation-fill-mode: backwards;
        animation-delay: 1.6s;
    }

    .image {
        // display: none;
        position: static;
        background-image: linear-gradient(
                270deg,
                transparent 50%,
                var(--color-bg)
            ),
            // linear-gradient(180deg, transparent 98%, var(--color-bg)),
            url("../images/pankaj-patel-Fi-GJaLRGKc-unsplash.jpg");
        width: 100%;
        max-width: 80%;
        height: 22rem;
        margin-inline-start: 1.5rem;
        background-position: 0 0;
        background-size: cover;
        animation: fadeInAnimation ease-in-out 1.75s;
        animation-iteration-count: 1;
        animation-fill-mode: backwards;
        animation-delay: 0.8s;
        @include m.for-mobile(w.$mobile) {
            grid-column: 2 / 3;
            grid-row: 1 / 5;
        }
        @include m.for-desktop(w.$desktop) {
            height: 25rem;
        }
    }

    .horizontal-line {
        height: 1px;
        background-color: var(--color-fg);
        margin-inline: 2rem;
        margin-block: 5rem;
    }
</style>
