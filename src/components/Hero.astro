---
import SocialLinks from "./SocialLinks.astro";
import AnimatedButton from "./AnimatedButton.astro";
import "../styles/global.scss";
---

<main
  id="main"
  class="main"
>
  <section
    id="hero"
    class="hero"
  >
    <div class="hero__content">
      <div class="hero-text">
        <div class="hero__image"></div>
        <h1 class="hero__heading hero__heading--2">
          Building<span class="text-gradient">
            <a href="#"> internet things</a>
          </span>
        </h1>
        <p class="hero__text">
          hand-crafted internet experences for profit and pleasure
        </p>
      </div>
      <a
        href="#contact"
        class="hero__contact"
        ><button class="btn nav__btn nav__link hero__btn">lets code</button>
      </a>
    </div>
    <div class="horizontal-line"></div>

    <div class="social-hero">
      <SocialLinks />
    </div>

    <div class="horizontal-line"></div>
    <AnimatedButton />
  </section>
</main>

<style lang="scss">
  .social-hero {
    display: flex;
    justify-content: space-between;
    padding-inline: 2rem;
  }

  @media screen and (min-width: var(--mobile)) {
    .hero {
      flex-direction: column;
    }
  }
  .main {
    margin-block-start: 7rem;
  }
  .hero {
    display: flex;
    flex-direction: row;
    position: relative;
    opacity: 1;
    background-color: var(--color-bg);
    transition: opacity 0.3s ease;
  }

  .hero__image {
    position: absolute;
    top: 0;
    right: 0;
    background-image: linear-gradient(transparent 65%, var(--color-bg)),
      linear-gradient(260deg, transparent 60%, var(--color-bg)),
      url("../images/adam-styled.png");
    height: 100%;
    max-height: 100%;
    width: 14em;
    margin-inline-end: 2rem;
    background-position: 0 0;
    background-size: cover;
    background-clip: padding-box;
    z-index: -1;
    animation: fadeInAnimation ease-in-out 1.75s;
    animation-iteration-count: 1;
    animation-fill-mode: backwards;
    animation-delay: 0.8s;
  }

  .hero__content {
    position: relative;
    display: flex;
    align-items: flex-end;
    margin-block-end: 2rem;
    z-index: 1;
  }

  .hero__heading {
    line-height: 1.3;
    margin-block-start: 1rem;
    margin-inline-start: 2rem;
    text-align: left;
    max-width: 100%;
    color: var(--color-fg);
    font-size: var(--font-size-xl);
    z-index: 1;
    animation: fadeInAnimation ease-in-out 2s;
    animation-iteration-count: 1;
    animation-fill-mode: backwards;
  }

  .hero__text {
    line-height: 1.3;
    margin-block-start: 1rem;
    margin-inline-start: 2rem;
    text-align: left;
    max-width: 60%;
    animation: fadeInAnimation ease-in-out 2s;
    animation-iteration-count: 1;
    animation-fill-mode: backwards;
    animation-delay: 0.5s;
  }

  .horizontal-line {
    height: 1px;
    background-color: var(--color-fg);
    margin-inline: 2rem;
    margin-block: 1rem;
  }

  .hero__action {
    display: flex;
    position: absolute;
    top: 100px;
    align-items: baseline;
    justify-content: center;
  }

  .hero__social {
    display: flex;
    justify-content: space-between;
    padding-inline: 1rem;
  }

  .hero__contact {
    width: 100%;
    max-width: 32%;
    margin-inline-end: 2rem;
  }

  .hero__btn {
    padding: 0.1em;
    animation: fadeInAnimation ease-in-out 1.5s;
    animation-iteration-count: 1;
    animation-fill-mode: backwards;
    animation-delay: 1.6s;
  }
</style>
