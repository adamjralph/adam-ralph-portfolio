---
import ThemeSelection from "./ThemeSelection.astro";
---

<!-- Navigation Tablet/Desktop -->
<nav class="nav">
  <div class="logo">
    <a href="/">
      <h1 class="logo-heading text-gradient">adam</h1>
    </a>
  </div>

  <div class="links">
    <a
      href="/about"
      class="link nav__link">about</a
    >
    <a
      href="/projects"
      class="link nav__link">projects</a
    >

    <a href="#contact"
      ><button class="btn nav__btn nav__link contact">Lets Talk</button>
    </a>
    <div class="theme-toggle">
      <ThemeSelection />
    </div>
  </div>
</nav>

<style lang="scss">
  .nav {
    display: flex;
    align-items: baseline;
    justify-content: space-between;
    margin-block-start: 2rem;
  }

  .links {
    display: flex;
    align-items: baseline;

    .link {
      margin-inline-end: 1rem;
    }
    .contact {
      width: 100%;
    }
  }
  .theme-toggle {
    z-index: 2;
    position: absolute;
    top: 2rem;
    right: 5.5rem;
  }
</style>
