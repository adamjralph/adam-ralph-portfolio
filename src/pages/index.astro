    <h3 class="more"
      >and more
      <a
        class="more-link"
        href="http://github.com/adamjralph">Here</a
      >
    </h3>
  </div>
  <h2 class="projects-title">My work</h2>
  <CompProjects />
  <div class="contact-form">
    <ContactForm justify="left" />
  </div>
</BaseLayout>

<style lang="scss">
  .projects-title {
    margin-block-start: 3rem;
    margin-block-end: 4rem;
  }

  .skills {
    margin-block-start: 3rem;
    display: grid;
    grid-template-columns: 1fr 1fr;
    grid-auto-columns: 20px;
  }

  .skills * ~ * {
    margin-block-end: 2rem;
  }

  .code-block {
    display: flex;
    flex-direction: column;
    grid-column: 1 / span 2;
    max-width: 50%;
    align-items: center;
    text-align: center;
    margin-block-end: 1rem;
    margin-inline: auto;

    .code {
      margin-block-end: 1rem;
    }
  }

  .brand-icon {
    max-width: 50%;
  }

  .skill-block {
    display: flex;
    flex-direction: column;
    align-items: center;
    &:nth-of-type(odd) {
      align-items: flex-end;
    }
    &:nth-of-type(even) {
      align-items: flex-start;
    }

    p {
      margin-block-end: 1rem;
    }
    h3 {
      margin-block-start: 1rem;
    }
  }

  .more {
    grid-column: 1 / span 2;
    text-align: center;
    a {
      color: var(--color-highlight);
    }
  }

  .contact-form {
    margin-block-start: 4rem;
  }
</style>
