---
import BaseLayout from "../layouts/BaseLayout.astro";
---

<BaseLayout>
  <h1>Theme toggle</h1>
  <div class="wrapper">
    <input
      type="checkbox"
      id="darkmode-toggle"
    />
    <label for="darkmode-toggle"></label>
  </div>
</BaseLayout>

<style lang="scss">
  .wrapper {
    // display: grid;
    // place-content: center;
  }

  .wrapper > * {
    // grid-column: 1 / -1;
    // grid-row: 1 / -1;
  }

  label {
    width: 2rem;
    // width: 500px;
    height: 1rem;
    // height: 200px;
    position: relative;
    display: block;
    background: #ebebeb;
    border-radius: 200px;
    box-shadow: inset 0 0.1em 0.3em rgba(0, 0, 0, 0.4),
      inset 0 -0.1em 0.3em rgba(255, 255, 255, 0.4);
    // box-shadow: inset 0px 5px 15px rgba(0, 0, 0, 0.4),
    // inset 0px -5px 15px rgba(255, 255, 255, 0.4);
    cursor: pointer;
    transition: 0.3s;
  }

  label:after {
    content: "";
    width: 0.8em;
    height: 0.8em;
    position: absolute;
    top: 0.1rem;
    left: 1.1rem;
    background: linear-gradient(
      180deg,
      var(--color-highlight-light),
      var(--color-highlight)
    );
    border-radius: 1rem;
    box-shadow: 0px 0.1em 0.3em rgba(0, 0, 0, 0.2);
    transition: 0.3s;
  }

  input {
    width: 0;
    height: 0;
    visibility: hidden;
  }

  input:checked + label {
    background: rgb(160, 160, 160);
  }

  input:checked + label:after {
    left: 0.9em;
    transform: translateX(-100%);
    background: linear-gradient(
      180deg,
      var(--color-highlight-light),
      var(--color-highlight-deep)
    );
  }
  label:active:after {
    width: 10px;
  }
</style>
