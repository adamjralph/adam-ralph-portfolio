---
import BaseLayout from "../layouts/BaseLayout.astro"
import type { MarkdownLayoutProps } from "astro"

type Props = MarkdownLayoutProps<{
    title: string
    video_url: string
    demo_url: string
    github_url: string
}>
const { frontmatter } = Astro.props
---

<BaseLayout title={frontmatter.title}>
    <div class="content-wrapper">
        <h2><span class="text-gradient">{frontmatter.title}</span></h2>
        <div class="card card-border video">
            <iframe
                width="100%"
                height="100%"
                src={frontmatter.video_url}
                title="YouTube video player"
                frameborder="0"
                allow="accelerometer; autoplay; clipboard-write; encrypted-media; gyroscope; picture-in-picture"
                allowfullscreen></iframe>
        </div>
        <div class="card view">
            <a href={frontmatter.demo_url}>
                <button class="btn nav__btn"> Visit site</button>
            </a>
            <a href={frontmatter.github_url}
                ><button class="btn nav__btn">View code</button>
            </a>
        </div>
        <div class="card goals">
            <slot />
        </div>
    </div>

    <style lang="scss">
        @use "../styles/mixins" as m;
        @use "../styles/variables" as w;

        .content-wrapper {
            display: flex;
            flex-direction: column;
            grid-template-columns: 1fr;
            gap: 1rem;
            padding-block-start: 3rem;
            width: 100%;
            margin-inline: auto;
            @include m.for-tablet(w.$tablet) {
                max-width: 80%;
            }
            @include m.for-desktop(w.$desktop) {
                max-width: 70%;
            }
        }

        .card {
            padding: 1rem;
            border-radius: 0.5rem;
            // color: var(--color-bg);
            @include m.for-tablet(w.$tablet) {
                padding: 2rem;
            }
        }

        .card-border {
            box-shadow: 0 0 3px var(--color-fg);
        }

        h2 {
            margin-block-end: 2rem;
        }

        p a {
            text-decoration: underline;
            color: var(--color-highlight);
        }
        p a:visited {
            text-decoration: underline;
            color: var(--color-highlight);
        }

        iframe {
            width: 100%;
            height: 250px;
            padding: 0.1rem;
            @include m.for-tablet(w.$tablet) {
                height: 400px;
            }
            @include m.for-desktop(w.$desktop) {
                height: 550px;
            }
            h3 {
                margin-block-end: 2rem;
            }
            p {
                line-height: 1.6;
            }
        }

        .view {
            display: flex;
            gap: 0.5rem;
            .btn {
                width: 100%;
                padding: 0.5rem;
            }
        }

        .goals {
            // grid-column: 1;
            // grid-row: 1;

            // @include m.for-tablet(w.$tablet) {
            //   grid-column: 1;
            // }
        }

        .image {
            // @include m.for-tablet(w.$tablet) {
            //   grid-column: 1;
            //   grid-row: 2;
            // }
        }

        .image {
            width: 100%;
            height: 50rem;
            background-image: url("../../images/evensite-mobile.png");
            background-position: cover;
            background-repeat: no-repeat;
            // @include m.for-tablet(w.$tablet) {
            //   background-position: -1.5rem 0;
            //   background-size: cover;
            //   width: 100%;
            //   grid-column: 1;
            //   grid-row: 2 / 4;
            // }
        }

        .build {
            // @include m.for-tablet(w.$tablet) {
            //   grid-column: 2 / 4;
            //   grid-row: 2 / 3;
            // }
        }

        .build .build-image {
            background-image: url("../../images/package-json-scripts.png");
            background-size: center cover;
            background-repeat: no-repeat;
            background-position: 0 0;
            height: 50%;
        }
        .video {
            padding: 0;
            grid-row: 2;
            padding: 0.5rem;
            // @include m.for-tablet(w.$tablet) {
            //   grid-column: 3 / 5;
            //   grid-row: 1;
            // }
        }

        .plans {
            // @include m.for-tablet(w.$tablet) {
            //   grid-column: 2 / 3;
            //   grid-row: 3 / 4;
            // }
        }
    </style>
</BaseLayout>
